{
  "manifest_version": 3,
  "name": "zeroTrace - Private AI Assistant",
  "version": "1.0.0",
  "description": "Enterprise-grade private AI assistant. Use any AI model with your API keys. Zero data storage, maximum privacy.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.mistral.ai/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "zeroTrace - Private AI Assistant"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "16": "data:image/svg+xml;base64,",
    "48": "data:image/svg+xml;base64,"
  }
}