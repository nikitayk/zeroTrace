{
  "manifest_version": 3,
  "name": "PrivateGPT - Secure AI Chat",
  "version": "1.0.0",
  "description": "Privacy-first ChatGPT alternative using your own OpenAI API key. No data storage, no tracking, complete privacy.",
  "permissions": ["activeTab"],
  "host_permissions": ["https://api.openai.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PrivateGPT - Secure AI Chat"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "16": "data:image/svg+xml;base64,",
    "48": "data:image/svg+xml;base64,"
  }
}